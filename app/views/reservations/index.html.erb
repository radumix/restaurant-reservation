<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <div class="navbar-nav ms-auto">
        <%= link_to 'Create Reservation', new_reservation_path, class: 'btn btn-primary mt-3' %>
    </div>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ms-auto">
        <h1>Restaurant Reservation</h1>
      </div>
    </div>
  </div>
  <a class="nav-link active text-danger" aria-current="page" href="/login">Logout</a>
</nav>

<% if @reservations.any? %>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Date & Time</th>
        <th>Number of People</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.date.strftime('%B %d, %Y %I:%M %p') %></td> <!-- AM/PM format -->
          <td><%= reservation.num_people %> people</td>
       
          <td>
            <%= button_to 'Cancel', reservation_path(reservation), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to cancel this reservation?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You don't have any reservations yet.</p>
<% end %>







